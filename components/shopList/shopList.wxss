@import '/import/css0_1.wxss';.goods-content { width: 100%; padding: 15rpx 30rpx; box-sizing: border-box; }
.content1 { width: 100%; height: 280rpx; overflow: hidden; }
.scrollView { width: 100%; height: 320rpx; display: -webkit-flex; display: flex; -webkit-flex-wrap: nowrap; flex-wrap: nowrap; white-space: nowrap; }
.scroll-item { width: 220rpx; height: 280rpx; display: inline-block; box-sizing: border-box; }
.scroll-item:not(:first-child) { margin-left: 10rpx; }
.scroll-item wx-image { width: 220rpx; height: 220rpx; border-radius: 15rpx; }
.item-name { width: 100%; font-size: 30rpx; color: #000; }
.content2 { width: 100%; }
.content2 .goods-item { width: 100%; box-shadow: 0 0 20rpx 3rpx rgba(0, 0, 0, 0.2); border-radius: 15rpx; padding: 20rpx 15rpx; box-sizing: border-box; display: -webkit-flex; display: flex; -webkit-align-items: center; align-items: center; }
.content2 .goods-item:not(:last-child) { margin-bottom: 20rpx; }
.goods-item wx-image { width: 214rpx; height: 214rpx; }
.item-mian { -webkit-flex: 1; flex: 1; margin-left: 20rpx; }
.item-mian-title { font-size: 32rpx; color: #333; width: 456rpx; font-weight: 500; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
.item-main-desc { font-size: 28rpx; color: #999; width: 456rpx; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; margin-top: 20rpx; }
.item-price-wrapper { width: 100%; display: -webkit-flex; display: flex; -webkit-align-items: center; align-items: center; -webkit-justify-content: space-between; justify-content: space-between; margin-top: 35rpx; }
.item-price-wrapper wx-view { font-size: 40rpx; color: #23a42c; font-weight: 500; }
.item-price-wrapper wx-button { border-radius: 50rpx; font-size: 30rpx; color: #fff; background: #23a42c; border: none; margin: 0; margin-right: 20rpx; line-height: 2; box-shadow: -2rpx 2rpx 10rpx 3rpx rgba(35, 164, 44, 0.3); }
.item-price-wrapper wx-button::after { border: none; }
.content3 { width: 100%; display: -webkit-flex; display: flex; -webkit-justify-content: space-between; justify-content: space-between; -webkit-flex-wrap: wrap; flex-wrap: wrap; }
.content3 .goods-item { width: 49%; margin-bottom: 20rpx; }
.content3 .goods-item:last-child, .content3 .goods-item:nth-last-child(2){ margin-bottom: 0rpx; }
.content3 .goods-item wx-image { width: 100%; height: 338rpx; display: block; border-radius: 15rpx 15rpx 0 0; }
.content3 .goods-item .item-name { padding: 0 15rpx; box-sizing: border-box; width: 100%; line-height: 45rpx; height: 90rpx; font-size: 28rpx; color: #353535; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 2; white-space:normal; text-align: left; padding-top: 10rpx; }
.item-price{ display: -webkit-flex; display: flex; -webkit-align-items: center; align-items: center; -webkit-justify-content: space-between; justify-content: space-between; padding: 0 15rpx; box-sizing: border-box; line-height: 31px; }
.item-price wx-view:first-child{ font-size: 34rpx; color: #323232; font-weight: 500; }
.item-price wx-view:last-child{ font-size: 40rpx; color: #24A42D; height: 100%; display: inline-block; vertical-align: bottom; }
.shodow{ box-shadow: -2rpx 2rpx 15rpx rgba(10, 10, 10, 0.2); }
