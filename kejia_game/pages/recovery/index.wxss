@import "../../__wuBaseWxss__/1.wxss";

page {
    background-color: #f4f4f4;
}

.line {
    width: 100%;
    height: 10rpx;
    display: flex;
    align-items: center;
}

.line image {
    width: 125rpx;
    height: 10rpx;
}

.positionImg {
    font-size: 34rpx;
}

.address {
    width: 500rpx;
    font-size: 30rpx;
    color: #333333;
}

.defaultAdr {
    padding: 20rpx 100rpx;
    display: flex;
    align-items: center;
    font-size: 30rpx;
    color: #000;
}

.headImg {
    width: 180rpx;
    height: 180rpx;
}

.itemName {
    font-size: 28rpx;
    color: #3e3e3e;
    width: 450rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.message {
    width: 650rpx;
    background-color: #f5f5f5;
    border-radius: 5rpx;
    padding: 10rpx;
}

.footer {
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    border-top: 1rxp solid #dfdfdf;
    margin-top: 20rpx;
    display: flex;
    align-items: center;
    color: #fc8535;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 999;
}

.block {
    height: 100rpx;
}

.payfor {
    position: absolute;
    right: 0;
    top: 0;
    width: 250rpx;
    height: 100%;
    background-color: #fc8535;
    font-size: 34rpx;
    color: #fff;
    text-align: center;
    line-height: 100rpx;
}

.radio {
    font-size: 28rpx;
}

.saleAddress_wrapper {
    display: flex;
}

.saleAddress {
    flex: 1;
    text-align: right;
    margin-left: 20rpx;
}

.buyList_item:not(:last-child) {
    border-bottom: 1rpx solid #dfdfdf;
}