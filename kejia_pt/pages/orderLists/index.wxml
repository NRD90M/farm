<view class='title-content'><block wx:for='{{types}}' wx:for-item='item' wx:for-index='index' wx:key='id'><view bindtap='selected' class='item {{(item.id == currentId?"active":"")}}' data-id='{{item.id}}' style='color:{{(item.id == currentId?farmSetData.background_color:"")}}'><view>{{item.title}}</view><block wx:if='{{ (item.read > 0 && !(item.clicked)) }}'><view class='num'>{{item.read}}</view></block></view></block></view><view class='block'></view><block wx:for='{{orderList}}' wx:for-item='item' wx:for-index='index' wx:key='id'><block wx:if='{{isContent}}'><view class='lists-item'><view class='item-title'><view class='headLine' style='color:{{farmSetData.background_color}}'>{{item.status_txt}}</view><block wx:if='{{ ( (item.status_code == 5 || item.status_code == 3)  || item.status_code == 7) }}'><view bindtap='deleteItem' class='iconfont icon-delete' data-orderid='{{item.id}}'></view></block></view><view bindtap='orderDetail' class='item-content' data-orderid='{{item.id}}'><view class='item-info-mian'><image src='{{item.cover}}'></image><view class='item-info-content'><view class='item-titler'>{{item.goods_name}}</view><block wx:if='{{item.sku_name != "[]"}}'><view class='info-spec'><text>规格:</text><text>{{item.sku_name}}</text></view></block><view class='money'><view><text>￥</text>{{item.price}}</view><view>x{{item.num}}</view></view></view></view></view><view class='item-footer'><view>共{{item.num}}件商品 合计:￥            <text>{{item.total_price}}</text></view><view class='btn-wrapper'><block wx:if='{{item.status_code == 0}}'><button bindtap='cancelOrder' class='btnStyles' data-orderid='{{item.id}}'>取消订单</button></block><block wx:else><view></view></block><block wx:if='{{item.status_code == 6}}'><button bindtap='applyRefund' class='btnStyle' data-orderid='{{item.id}}' style='background:{{farmSetData.background_color}}'>申请退款</button></block><block wx:if='{{item.status_code == 0}}'><button bindtap='nowPay' class='btnStyle' data-orderid='{{item.id}}' style='background:{{farmSetData.background_color}}'>立即付款</button></block><block wx:if='{{item.status_code == 2}}'><button bindtap='confirmGoods' class='btnStyle' data-orderid='{{item.id}}' style='background:{{farmSetData.background_color}}'>确认收货</button></block><block wx:if='{{ (item.status_code == 3 && item.is_comment == 0) }}'><button bindtap='toComment' class='btnStyle' data-orderid='{{item.id}}' style='background:{{farmSetData.background_color}}'>立即评价</button></block></view></view></view></block></block><view class='blocks'></view><block wx:if='{{!(isContent)}}'><view class='none'><image src='/kejia_farm/images/icon/none.png'></image><text class='tags'>您还没有相关的订单</text></view></block>