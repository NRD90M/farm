<view style='padding-bottom:90rpx;'><view style='background:white'><view class='p20 flex'><view class='add-letf'><text class='iconfont icon-position1 f60' style='color:{{farmSetData.background_color}}'></text></view><block wx:if='{{orderData.send_method == 0}}'><view class='add-right'><view>{{orderData.name}}                    <text class='phone'>{{orderData.phone}}</text></view><block wx:if='{{orderData.send_method == 1}}'><view bindtap='gotoMerchant'>{{orderData.address}}</view></block><block wx:else><view>{{orderData.address}}</view></block></view></block><block wx:else><view class='add-right'><view>自提地址                    <text class='phone'>{{orderData.phone}}</text></view><view bindtap='gotoMerchant'>{{farmSetData.self_lifting_address}}</view></view></block></view></view><view class='block20'></view><view class='bgff p20'><block wx:for='{{orderDetail}}' wx:for-item='item' wx:for-index='index' wx:key='id'><view class='flex ptb20'><image class='headImg' src='{{item.cover}}'></image><view class='ml20'><view class='itemName'>{{item.goods_name}}</view><view class='f26 mt10 cf93'><block wx:for='{{item.specItem}}' wx:for-item='val' wx:for-index='index' wx:key='index'><text>{{val.name}}:</text><text class='ml10'>{{val.spec_value}};</text></block><text class='ml10'>X{{item.count}};</text></view><view><text class='f26'>￥{{item.price}}</text></view></view></view></block><view class='order-li'><text class='li-title'>商品总价</text><text class='li-val'>￥{{orderData.total_price}}</text></view><view class='order-li'><text class='li-title'>运费(快递)</text><text class='li-val'>￥{{orderData.send_price}}</text></view><view class='order-li'><text class='li-title'>优惠券</text><text class='li-val'>￥{{orderData.coupon_price}}</text></view><view class='order-pay'><text class='pay-title'>实付款</text><text class='pay-val' style='color:{{farmSetData.background_color}}'>￥{{orderData.pra_price}}</text></view><block wx:if='{{orderDta.remark}}'><view class='order-remark'><text>备注：{{orderDta.remark}}</text></view></block></view><view class='block20'></view><view class='order-info'><view class='info-title'>订单信息</view><view class='info-li'><view class='info-li-left'>订单编号：</view><view class='info-li-right'>{{orderData.order_number}}</view><view bindtap='copyData' class='order-copy' data-info='{{orderData.order_number}}' style='color:{{farmSetData.background_color}}'>复制</view></view><block wx:if='{{orderData.uniontid}}'><view class='info-li'><view class='info-li-left'>商户订单号：</view><view class='info-li-right'>{{orderData.uniontid}}</view></view></block><view class='info-li'><view class='info-li-left'>创建时间：</view><view class='info-li-right'>{{orderData.create_time}}</view></view><block wx:if='{{orderData.pay_time}}'><view class='info-li'><view class='info-li-left'>付款时间：</view><view class='info-li-right'>{{orderData.pay_time}}</view></view></block><block wx:if='{{orderData.express_company}}'><view class='info-li'><view class='info-li-left'>快递公司：</view><view class='info-li-right'>{{orderData.express_company}}</view></view></block><block wx:if='{{orderData.send_number}}'><view class='info-li'><view class='info-li-left'>快递单号：</view><view class='info-li-right'>{{orderData.send_number}}</view><view bindtap='copyData' class='order-copy' data-info='{{orderData.send_number}}' style='color:{{farmSetData.background_color}}'>复制</view></view></block></view></view>