<view><view class='flexSa plr20 f30 orderTitle'><view bindtap='changeIndex' class='cd515151 plr20 {{(currentIndex == 1?"currentIndex":"")}}' data-index='1' style='color:{{(currentIndex == 1?farmSetData.background_color:"")}};border-bottom:3rpx solid {{(currentIndex == 1?farmSetData.background_color:"white")}}'>全部</view><view bindtap='changeIndex' class='cd515151 plr20 {{(currentIndex == 2?"currentIndex":"")}}' data-index='2' style='color:{{(currentIndex == 2?farmSetData.background_color:"")}};border-bottom:3rpx solid {{(currentIndex == 2?farmSetData.background_color:"white")}}'>待付款</view><view bindtap='changeIndex' class='cd515151 plr20 {{(currentIndex == 3?"currentIndex":"")}}' data-index='3' style='color:{{(currentIndex == 3?farmSetData.background_color:"")}};border-bottom:3rpx solid {{(currentIndex == 3?farmSetData.background_color:"white")}}'>已付款</view><view bindtap='changeIndex' class='cd515151 plr20 {{(currentIndex == 4?"currentIndex":"")}}' data-index='4' style='color:{{(currentIndex == 4?farmSetData.background_color:"")}};border-bottom:3rpx solid {{(currentIndex == 4?farmSetData.background_color:"white")}}'>待收货</view></view><view class='block'></view><block wx:if='{{orderData.length > 0}}'><view class='order-content'><block wx:for='{{orderData}}' wx:for-item='item' wx:for-index='index' wx:key='id'><view class='mainBody'><view class='ptl30 brb'><view class='itemType' style='color:{{farmSetData.background_color}}'><view class='left'><text>订单编号：{{item.order_number}}</text><text>下单时间：{{item.create_time}}</text></view><view class='right'><text>{{item.status_txt}}</text></view></view><block wx:for='{{item.order_detail}}' wx:for-item='val' wx:for-index='index' wx:key='{{index}}'><view class='flex mt20'><image class='HeadImg' src='{{val.cover}}'></image><view class='ml20'><view class='itemName'>{{val.goods_name}}</view><view class='flex mt10 f28 cf93'><block wx:for='{{val.specItem}}' wx:for-item='spec' wx:for-index='index' wx:key='{{index}}'><text>{{spec.name}}:</text><text class='ml10'>{{spec.spec_value}}</text></block></view><view class='cf93'><text class='f32 cf2b'>￥{{val.price}}</text><text class='ml20 f26'>X{{val.count}}</text></view></view></view></block></view><view class='order-detail'><text>共{{item.goodsCount}}件商品 合计:￥{{item.total_price}}</text></view><view class='btnArr'><block wx:if='{{item.status_code == 0}}'><button bindtap='cancelOrder' class='cancelOrder' data-orderid='{{item.id}}'>取消订单</button></block><block wx:if='{{item.status_code == 0}}'><button bindtap='payGroupOrder' class='PayOrder' data-orderid='{{item.id}}' style='border:1rpx solid {{farmSetData.background_color}};color:{{farmSetData.background_color}}'>付款</button></block><block wx:if='{{ (item.status_code == 1 || item.status_code == 6) }}'><button bindtap='applyRefund' class='cancelOrder' data-orderid='{{item.id}}'>申请退款</button></block><block wx:if='{{item.status_code == 2}}'><button bindtap='sureGoods' class='PayOrder' data-orderid='{{item.id}}' style='border:1rpx solid {{farmSetData.background_color}};color:{{farmSetData.background_color}}'>确认收货</button></block><block wx:if='{{ (item.status_code == 3 || item.status_code == 5) }}'><button bindtap='deleteOrder' class='cancelOrder' data-orderid='{{item.id}}'>删除订单</button></block></view></view></block></view></block><block wx:else><view><view class='none'><image src='../../../../images/icon/none.png'></image><text class='tags'>您还没有相关的订单</text></view></view></block></view>