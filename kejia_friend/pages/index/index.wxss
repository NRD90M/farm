/* kejia_friend/pages/index/index.wxss */
page{
    background: #f8f8f8;
}

.card-list{
    margin: 0 34rpx 30rpx;
    border-radius: 40rpx;
    padding:20rpx;
    background: #fff;
}

.card-list-header{
    margin-bottom:20rpx;
    border-radius: 50%;
}

.card-list-header-img{
    width: 70rpx;
    height:70rpx;
}

.card-list-header-text{
    flex:1;
    padding-left:10rpx;

}

.card-list-header-text .name{
    color:#000;
}

.card-list-header-text .time{
    color:#999;
    font-size:26rpx;
}

.card-list-header-btn1{
    border:1rpx solid #0fc8a8;
    border-radius: 10rpx;
    color:#0fc8a8;
    font-size:34rpx;
    padding:0 16rpx;
}

.card-list-header-btn2{
    border:1rpx solid #757575;
    border-radius: 10rpx;
    color:#757575;
    font-size:34rpx;
    padding:0 16rpx;
}

.card-list-content{
    margin-bottom:20rpx;
    font-size:28rpx;
    color:#000;
    padding:0 10rpx;
}

.card-list-image{
    margin-bottom:20rpx;
}

.card-list-image .img1{
    width: 642rpx;
    height:376rpx;
    border-radius: 40rpx;
}

.card-list-image .img2{
    width: 310rpx;
    height:200rpx;
    margin: 0 5rpx 20rpx;
}

.card-list-image .img3{
    width:200rpx;
    height:200rpx;
    margin:0 7rpx 20rpx;
}

.card-list-footer{
    padding:0 10rpx;
}

.card-list-footer .item1{
    flex:1;
}

.card-list-footer .item2{
    width: 120rpx;
    justify-items: center;
}

.card-list-footer .item3{
    justify-items: center;
}

.card-list-footer .item-text{
    padding-left:10rpx;
    color:#999;
}


