/* testDemo/index.wxss */
page{
    background: #f8f8f8;
}
.content{
    padding:20rpx;
}
.card-list{
    margin-bottom: 30rpx;
    background: #fff;
    border-radius: 40rpx;
}

.card-list-img{
    width: 710rpx;
    height:518rpx;
}

.card-list-content{
    padding-bottom:30rpx;
}


.card-list-in{
    padding: 20rpx 30rpx;
}

.card-list-icon{
    display: flex;
    align-items: center;
}

.card-list-icon .text1{
    width:200rpx;line-height:80rpx;margin-top:10rpx;
    font-size:28rpx;
    color:#444;
}

.card-list-icon .text2{
    flex:1;line-height:80rpx;margin-top:10rpx;
    font-size:30rpx;
    color:#000;
}

.gride{
    display: flex;
    align-items: center;
    /* justify-content: center; */
    flex-wrap: wrap;
}

.gride-item{
    width:25%;
    text-align: center;
    padding-top: 30rpx;
}

.gride-item-img{
    width: 105rpx;
    height:105rpx;
}

.gride-item-text{
    font-size:30rpx;
    color:#000;
}

.gride-icon{
    width:100%;height:100%
}

.card-list-header{
    font-size:34rpx;color:#000;margin:10rpx 30rpx 30rpx;
}

