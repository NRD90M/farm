page{ background-color: #efefef; }
.orderTitle{ height:90rpx; line-height:89rpx; background-color: #fff; margin-bottom: 20rpx; }
.currentIndex{ border-bottom: 3rpx solid #16BA63; color: #16BA63; }
.mainBody{ width: 95%; margin: 10rpx auto 0rpx; background-color: #fff; }
.brb{ border-bottom: 1rpx solid #cdcdcd; }
.itemType{ color: #16BA63; font-size: 34rpx; margin-bottom: 40rpx; }
.HeadImg{ width: 300rpx; height: 172rpx; }
.item_info_wrapper{ -webkit-flex: 1; flex: 1; margin-left: 20rpx; width: 60%; }
.itemName{ color: #4d4d4d; font-size: 32rpx; font-weight: 500; width: 100%; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; height: 80rpx; line-height: 80rpx; -webkit-line-clamp:2; -webkit-box-orient:vertical; }
.item_time_wrapper{ display: -webkit-flex; display: flex; -webkit-align-items: center; align-items: center; -webkit-justify-content: space-between; justify-content: space-between; margin-top: 10rpx; }
.item_time_wrapper wx-view:first-child{ font-size: 30rpx; color: #828282; }
.item_time_wrapper wx-view:last-child{ font-size: 34rpx; }
.btnArr{ width: 100%; display: -webkit-flex; display: flex; -webkit-justify-content:flex-end; justify-content:flex-end; padding: 25rpx 0rpx; }
.btnArr .examine{ font-size: 32rpx; -webkit-flex: 1; flex: 1; text-align: left; padding-left: 30rpx; line-height: 70rpx; }
.cancelOrder{ border:1rpx solid gray; color:gray; font-size:30rpx; border-radius:60rpx; height:60rpx; line-height:60rpx; margin:0rpx 20rpx; background:#fff; }
.cancelOrder::after{ border: none; }
.PayOrder{ color:#fff; font-size:26rpx; background-color:#16BA63; margin:0rpx 20rpx; height:60rpx; line-height:60rpx; border-radius:60rpx; }
.PayOrder::after{ border: none }
.noOrder{ width: 100%; margin-top: 200rpx; text-align: center; font-size: 30rpx; color: #8B8B8B; letter-spacing: 3rpx; }
.noOrder wx-image{ width: 400rpx; height: 230rpx; }
